@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="frameblock" style="width: 100%;height: 89%; position:absolute;  background-position:center; background-image:url(/images/cooltext339224809839651.png); background-repeat:no-repeat;">
    <iframe id="iFrame" src="@ViewBag.Path" align="middle" frameborder="0" style="width:100%;height:100%; position:absolute;margin-top:2px;"></iframe>
</div>
@section Script{
    <script>
        function reloadIFrame() {
            var iframe = document.getElementById("iFrame");
            if (iframe.contentDocument.URL == "about:blank") {
                iframe.src = iframe.src;
            }
        }
        var timerId = setInterval("reloadIFrame();", 1000);

        $(document).ready(function () {
            $('#iFrame').on('load', function () {
                clearInterval(timerId);
            });
        });
    </script>
}