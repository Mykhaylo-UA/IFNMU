@model IFNMUSiteCore.Models.Week
@{ Layout = null;}
<table>
    <tr>
        <th>№</th>
        <th>Name</th>
        <th>Time</th>
    </tr>
</table>
@foreach (var day in Model.ScheduleDays.OrderBy(day => day.DayNumber))
{
    <table>
        <caption>
            @switch (@day.DayNumber)
            {
                case 1:
                    <span>Понеділок</span>
                    break;
                case 2:
                    <span>Вівторок</span>
                    break;
                case 3:
                    <span>Середа</span>
                    break;
                case 4:
                    <span>Четвер</span>
                    break;
                case 5:
                    <span>П'ятниця</span>
                    break;
            }
        </caption>
        @foreach (var lessons in day.Lessons.OrderBy(les => les.LessonNumber))
        {
            <tr>
                <td>@lessons.LessonNumber</td>
                <td>@Html.ActionLink(lessons.Name, "Documents", "Home", new { id = lessons.Id }, null)</td>
                <td>
                    @switch (lessons.LessonNumber)
                    {
                        case 1:
                            <span>8:00</span>
                            break;
                        case 2:
                            <span>10:05</span>
                            break;
                        case 3:
                            <span>12:10</span>
                            break;
                        case 4:
                            <span>14:15</span>
                            break;
                    }
                </td>
            </tr>
        }
    </table>
}