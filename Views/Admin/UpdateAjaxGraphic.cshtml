@model IFNMUSiteCore.Models.Graphic
@{
    Layout = null;
}
<form class="modalContentAdmin" method="post" asp-controller="Admin" asp-action="UpdateGraphic">
    <input type="hidden" name="Id" id="Id" value="@Model.Id" />
    <input type="hidden" name="ChairId" id="ChairId" value="@Model.ChairId" />
    <label for="Name">Введіть текст</label><br />
    <textarea style="width:100%" id="TextGraphicEdit" name="Text">@Model.Text</textarea>
    <input style="width:80%;" type="submit" value="Змінити" />
</form>
<form class="modalContentAdmin" method="post" asp-controller="Admin" asp-action="DeleteGraphic">
    <input type="hidden" name="Id" id="Id" value="@Model.Id" />
    <input type="hidden" name="ChairId" id="ChairId" value="@Model.ChairId" />
    <input style="width:80%;" type="submit" value="Видалити" onclick="return confirm('Ви дійсно хочете видалити графік?')"/>
</form>