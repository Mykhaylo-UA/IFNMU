@model IFNMUSiteCore.ViewModels.RegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Style{
    <style>
        .inputClass {
            border-radius: 4px;
            margin: 10px 0;
        }
    </style>
}
<h2 style="text-align:center;">Реєстрація нового користувача</h2>
<div style="display: flex;text-align: center;">

    <form method="post" asp-controller="Account" asp-action="Register" style ="display: flex;flex-direction: column;margin: auto;width: 250px;">
        <div asp-validation-summary="ModelOnly"></div>
        <label asp-for="Email"></label><br />
        <input class="inputClass" asp-for="Email" style="width: 100%;" />
        <span asp-validation-for="Email"></span>
        <label asp-for="Password"></label><br />
        <input class="inputClass" asp-for="Password" style="width: 100%;" />
        <span asp-validation-for="Password"></span>
        <label asp-for="PasswordConfirm"></label><br />
        <input class="inputClass" asp-for="PasswordConfirm" style="width: 100%;" />
        <span asp-validation-for="PasswordConfirm"></span>
        <input type="submit" value="Реєстрація" style="margin: auto;border-radius: 4px;" />
    </form>
</div>