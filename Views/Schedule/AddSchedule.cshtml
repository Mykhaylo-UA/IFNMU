    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddSchedule</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        .table td {
            padding: 0;
        }

        tbody td {
            width: 100px;
        }

            tbody td:nth-child(1) {
                width: 250px;
            }
    </style>
</head>
<body>
    <div class="table-responsive" style="overflow-x: auto; width:3000px;">
        <form method="post" asp-action="AddSchedule">
            <table class="table-bordered" style="text-align: center;">
                <thead class="thead-inverse" style="background-color: lightgoldenrodyellow;">
                    <tr>
                        <td rowspan="3">Назва дисципліни</td>
                        <td colspan="25">Перший тиждень</td>
                        <td colspan="25">Другий тиждень</td>
                    </tr>
                    <tr>
                        <td colspan="4">Понеділок</td>
                        <td colspan="4">Вівторок</td>
                        <td colspan="4">Середа</td>
                        <td colspan="4">Четвер</td>
                        <td colspan="4">П'ятниця</td>
