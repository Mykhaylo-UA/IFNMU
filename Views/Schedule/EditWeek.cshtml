@model List<Week>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditWeek</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        @foreach (var a in Model)
        {
            <h3>Тиждень №@(a.From==null ? a.NumberWeek.ToString() : a.From.ToString() + " - " +a.To.ToString())</h3>
            @foreach (var b in a.ScheduleDays)
            {
                <div class="list-group">
                    @switch (b.DayNumber)
                    {
                        case 1: <a class="list-group-item list-group-item-action" href="/Schedule/EditDay/@b.Id">Понеділок</a> break;
                        case 2: <a class="list-group-item list-group-item-action" href="/Schedule/EditDay/@b.Id">Вівторок</a> break;
                        case 3: <a class="list-group-item list-group-item-action" href="/Schedule/EditDay/@b.Id">Середа</a> break;
                        case 4: <a class="list-group-item list-group-item-action" href="/Schedule/EditDay/@b.Id">Четвер</a> break;
                        case 5: <a class="list-group-item list-group-item-action" href="/Schedule/EditDay/@b.Id">П'ятниця</a> break;
                    }
                </div>
            }
        }
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>
